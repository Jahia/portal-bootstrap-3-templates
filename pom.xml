<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jahia.modules</groupId>
    <artifactId>jahia-modules</artifactId>
    <version>7.1.1.0</version>
  </parent>
  <artifactId>portal-bootstrap-3-templates</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <name>Portal factory - Bootstrap 3 templates</name>
  <description>This is the custom module (Portal Bootstrap 3 templates) for running on a Digital Experience Manager server.</description>
  <scm>
    <connection>scm:git:git@github.com:Jahia/portal-bootstrap-3-templates.git</connection>
    <developerConnection>scm:git:git@github.com:Jahia/portal-bootstrap-3-templates.git</developerConnection>
    <url>scm:git:git@github.com:Jahia/portal-bootstrap-3-templates.git</url>
  </scm>
  <properties>
    <jahia-depends>default,bootstrap,jahia-bootstrap-v3-components,portal-core,portal-default-templates,portal-user-portal,portal-widgets</jahia-depends>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.jahia.modules</groupId>
      <artifactId>bootstrap</artifactId>
      <version>2.1.0-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.jahia.modules</groupId>
      <artifactId>portal-core</artifactId>
      <version>2.0.2-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.jahia.modules</groupId>
      <artifactId>portal-widgets</artifactId>
      <version>2.0.2-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <repositories>
    <repository>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>jahia-public</id>
      <name>Jahia Public Repository</name>
      <url>https://devtools.jahia.com/nexus/content/groups/public</url>
    </repository>
  </repositories>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Jahia-Module-Priority>2</Jahia-Module-Priority>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
